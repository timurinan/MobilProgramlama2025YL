<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <EditText
        android:id="@+id/txt_mail_login"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="194dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="98dp"
        android:ems="10"
        android:hint="E-Mail Giriniz"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/txt_şifre_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_şifre_login"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="50dp"
        android:ems="10"
        android:hint="Şifre Giriniz"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/txt_şifremiunuttum_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_mail_login" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="168dp"
        android:text="LogIn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txt_şifremiunuttum_login"
        app:layout_constraintTop_toBottomOf="@+id/txt_şifremiunuttum_login" />

    <TextView
        android:id="@+id/txt_kayıt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="1dp"
        android:text="Kayıt Olmak İstiyorum"
        android:textColor="#00BCD4"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_şifremiunuttum_login"
        app:layout_constraintEnd_toStartOf="@+id/txt_şifremiunuttum_login"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_şifremiunuttum_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="54dp"
        android:text="Şifremi Unuttum"
        android:textColor="#00BCD4"
        app:layout_constraintBottom_toTopOf="@+id/btn_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_kayıt_login"
        app:layout_constraintTop_toBottomOf="@+id/txt_şifre_login" />
</androidx.constraintlayout.widget.ConstraintLayout>