<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_adsoyad_item"
        android:layout_width="match_parent"
        android:hint="Adı-Soyadı"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/adsoyad_ikon"
        android:layout_height="wrap_content"
      />

    <TextView
        android:id="@+id/txt_mail_item"
        android:hint="Maili"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/mail_ikon"
        android:drawablePadding="10dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_telefon_item"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:drawableStart="@drawable/telefon_ikon"
        android:drawablePadding="10dp"
        android:layout_height="wrap_content"
        android:hint="Telefonu" />

</LinearLayout>